@page
@model RegisterModel

@{
    ViewData["Title"] = "Реєстрація";
}

<style>
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    /* Style for cropping overflow */
    .crop {
        overflow: hidden;
    }

    .image-container {
        background-image: url("/images/login.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: 20% 60%;
        border-top-left-radius: 1rem;
        border-bottom-left-radius: 1rem;
    }
</style>
<div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
                <div class="col-md-6 col-lg-5 d-none d-md-block image-container">
                </div>
                <div class="col-md-6 col-lg-7 d-flex align-items-center">
                    <div class="card-body p-4 p-lg-5 text-black">
                        <h1>Створіть новий акаунт!</h1>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Ваше ім'я" />
                                <label asp-for="Input.Name">Ім'я</label>
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Пошта</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password">Пароль</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.ConfirmPassword">Підтвердження паролю</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div>
                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Зареєструватись</button>
                            </div>
                            <div>
                                <p class="mt-3">
                                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Вже є акаунт?</a>
                                </p>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
